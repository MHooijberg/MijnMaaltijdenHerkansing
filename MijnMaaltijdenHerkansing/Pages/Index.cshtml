@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}
<head>
    <style>
        .col {
            height: 125px;
            margin: 10px;
            transition: opacity 1s;
            opacity: 0.7;

        }
        .col-sm-2:hover {
            opacity: 1;
        }

        .row-1 {
            width: 107%;
            margin-left: -15px;
            margin-top: -20px;
            padding:0;
        }

    </style>
</head>
<body>
    <div class="container">
        <h1>Home</h1>
        <h5>Welkom op de website</h5>
        <br />
        <div class="row">
            <div class="col-4">
                <h3>Verse gerechten</h3>
            </div>
            <div class="col-4">
            </div>
            <div class="col-4">
                <button class="rounded border-0 bg-primary text-white" style="justify-content:end" type="button" onclick=""> Meer Maaltijden</button>
            </div>
        </div>
        <div class="row justify-content-start w-100">
            @foreach (Models.Post item in Model.Posts)
            {
                if (item.IsBevroren == false)
                {
            <div class="card mr-4" style="width: 10rem; height:10rem; background-color:lightgray">
                <div class="card-body align-items-center justify-content-center">
                    <h6 class="card-text" style="font-size:11px; margin-left:-10px; margin-top:-10px;">@item.Naam</h6>
                </div>
                <img class="card-img-top" src="~/img/meals/prei-stamppot-met-kip-ketjap-418x315.jpg" alt="Card image cap">
            </div>
                }
            }
       </div>
        <div class="row" style="height: 50px; margin-top:50px;"></div>
        <div class="row">
            <div class="col-4">
                <h3>Diepvriesgerechten</h3>
            </div>
            <div class="col-4">
            </div>
            <div class="col-4">
                <button class="rounded border-0 bg-primary text-white" style="justify-content:end" type="button" onclick=""> Meer Maaltijden</button>
            </div>
        </div>
        <div class="row justify-content-start w-100">
            @foreach (Models.Post item in Model.Posts)
            {
                if (item.IsBevroren == true)
                {
            <div class="card mr-4" style="width: 10rem; height:10rem; background-color:lightgray">
                <div class="card-body align-items-center justify-content-center">
                    <h6 class="card-text" style="font-size:11px; margin-left:-10px; margin-top:-10px;">@item.Naam</h6>
                </div>
                <img class="card-img-top" src="~/img/meals/prei-stamppot-met-kip-ketjap-418x315.jpg" alt="Card image cap">
            </div>
                }
            }
        </div>
    </div>
</body>