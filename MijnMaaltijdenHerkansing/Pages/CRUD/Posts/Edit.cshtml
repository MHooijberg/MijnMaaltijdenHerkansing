@page
@model MijnMaaltijdenHerkansing.Pages.CRUD.Posts.EditModel

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}

<h1>Edit</h1>

<h4>Post</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Post.PostId" />
            <div class="form-group">
                <label asp-for="Post.Naam" class="control-label"></label>
                <input asp-for="Post.Naam" class="form-control" />
                <span asp-validation-for="Post.Naam" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Post.Beschrijving" class="control-label"></label>
                <input asp-for="Post.Beschrijving" class="form-control" />
                <span asp-validation-for="Post.Beschrijving" class="text-danger"></span>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="Post.IsBevroren" /> @Html.DisplayNameFor(model => model.Post.IsBevroren)
                </label>
            </div>
            <div class="form-group">
                <label asp-for="Post.BereidOp" class="control-label"></label>
                <input asp-for="Post.BereidOp" class="form-control" />
                <span asp-validation-for="Post.BereidOp" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Post.HoudbaarheidsDatum" class="control-label"></label>
                <input asp-for="Post.HoudbaarheidsDatum" class="form-control" />
                <span asp-validation-for="Post.HoudbaarheidsDatum" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Post.aantalPorties" class="control-label"></label>
                <input asp-for="Post.aantalPorties" class="form-control" />
                <span asp-validation-for="Post.aantalPorties" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Post.Waardering" class="control-label"></label>
                <input asp-for="Post.Waardering" class="form-control" />
                <span asp-validation-for="Post.Waardering" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Post.GebruikerId" class="control-label"></label>
                <select asp-for="Post.GebruikerId" class="form-control" asp-items="ViewBag.GebruikerId"></select>
                <span asp-validation-for="Post.GebruikerId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Post.MaaltijdId" class="control-label"></label>
                <select asp-for="Post.MaaltijdId" class="form-control" asp-items="ViewBag.MaaltijdId"></select>
                <span asp-validation-for="Post.MaaltijdId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
