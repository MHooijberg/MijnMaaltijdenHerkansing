@page
@model MijnMaaltijdenHerkansing.Pages.CRUD.Maaltijden.EditModel

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}

<h1>Edit</h1>

<h4>Maaltijd</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Maaltijd.MaaltijdId" />
            <div class="form-group">
                <label asp-for="Maaltijd.Naam" class="control-label"></label>
                <input asp-for="Maaltijd.Naam" class="form-control" />
                <span asp-validation-for="Maaltijd.Naam" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Maaltijd.Beschrijving" class="control-label"></label>
                <input asp-for="Maaltijd.Beschrijving" class="form-control" />
                <span asp-validation-for="Maaltijd.Beschrijving" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Maaltijd.Ingredienten" class="control-label"></label>
                <input asp-for="Maaltijd.Ingredienten" class="form-control" />
                <span asp-validation-for="Maaltijd.Ingredienten" class="text-danger"></span>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="Maaltijd.IsVegatarisch" /> @Html.DisplayNameFor(model => model.Maaltijd.IsVegatarisch)
                </label>
            </div>
            <div class="form-group">
                <label asp-for="Maaltijd.Afbeelding" class="control-label"></label>
                <input asp-for="Maaltijd.Afbeelding" class="form-control" />
                <span asp-validation-for="Maaltijd.Afbeelding" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Maaltijd.GebruikerId" class="control-label"></label>
                <select asp-for="Maaltijd.GebruikerId" class="form-control" asp-items="ViewBag.GebruikerId"></select>
                <span asp-validation-for="Maaltijd.GebruikerId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
