@page "{postId?}"
@model MijnMaaltijdenHerkansing.Pages.MaaltijdModel
@{
    ViewData["Title"] = "Maaltijd"; // Naam van het gerecht (moet wel gesaniteerd worden)
}
<head>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.bundle.min.js" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.2.1/jquery.min.js" />

    <style>
        .aanpasbutton {
            background-color: #22863a;
            border: none;
            color: white;
            border-radius: 10px;
            margin: 5px;
            width: 120px;
            height: 30px;
        }

        .container {
            padding: 10px;
        }

        button:hover {
            opacity: 0.8;
        }

        .col-sm-4 {
            border-radius: 5px;
            height: 205px;
            margin: 10px;
        }

        .col-lg-2 {
            border-radius: 5px;
            height: 110px;
        }

        .row-lg-2 {
            border-radius: 5px;
            height: 110px;
        }

        .row-lg-1 {
            height: 20px;
        }

        .row-lg-3 {
            height: 80px;
        }

        div.stars {
            width: 270px;
            display: inline-block
        }

        .mt-200 {
            margin-top: 125px
        }

        input.star {
            display: none;
        }

        label.star {
            float: right;
            padding: 10px;
            font-size: 15px;
            color: #4A148C;
            transition: all .2s
        }

        input.star:checked ~ label.star:before {
            content: '\f005';
            color: #FD4;
            transition: all .25s
        }

        input.star-5:checked ~ label.star:before {
            color: #FE7;
            text-shadow: 0 0 20px #952
        }

        input.star-1:checked ~ label.star:before {
            color: #F62
        }

        label.star:hover {
            transform: rotate(-15deg) scale(1.3)
        }

        label.star:before {
            content: '\f006';
            font-family: FontAwesome
        }

        img {
            margin: 10px;
            display: flex;
            align-items: center;
            justify-content: center;
        }
    </style>
</head>
<body>
    <div class="container">
        <div class="row">
            <div class="col">
                <h1>@Model.post.Naam</h1>
            </div>
            <div class="col">
                <a href="/Profiel?id=@Model.post.GebruikerId" asp-area="Profile" asp-page="/Index" asp-route-id="@Model.post.GebruikerId">
                    <div class="row">
                        <img style="width: 30px; border: solid black; border-radius: 50%;" src="~/img/pfp/ProfilePictureTemplate.png" />
                        <label style="font-weight: bold; pointer-events: none; text-decoration: none; color: black;">@Model.gebruiker.UserName</label>
                    </div>

                </a>
            </div>
        </div>
        <div class="row">
            <div class="col-sm-4 rounded" style="background: url('@Model._context.Maaltijden.Find(Model.post.MaaltijdId).Afbeelding') no-repeat; background-size: 100%;">
            </div>
            <div class="col-sm-4"><h3>€5,00</h3></div>
        </div>
        <div class="row">
            <div class="col-md-12">
                <div class="stars">
                    <form action="">
                        <input class="star star-5" id="star-5" type="radio" name="star" />
                        <label class="star star-5" for="star-5"></label>
                        <input class="star star-4" id="star-4" type="radio" name="star" />
                        <label class="star star-4" for="star-4"></label>
                        <input class="star star-3" id="star-3" type="radio" name="star" />
                        <label class="star star-3" for="star-3"></label>
                        <input class="star star-2" id="star-2" type="radio" name="star" />
                        <label class="star star-2" for="star-2"></label>
                        <input class="star star-1" id="star-1" type="radio" name="star" />
                        <label class="star star-1" for="star-1"></label>
                    </form>
                </div>
            </div>
        </div>
        <div class="row" style="margin-top: 20px">
            <div class="col-sm-2">
                <h5>Beschrijving:</h5>
                <h10 style="color: dimgrey">@Model.post.Beschrijving</h10>
            </div>
        </div>
        <div class="row" style="margin-top: 20px">
            <div class="form-check form-check-inline" style="margin:10px;">
                <input class="form-check-input" type="radio" name="inlineRadioOptions" id="klein" value="option1">
                <label class="form-check-label" for="klein">klein</label>
            </div>
            <div class="form-check form-check-inline">
                <input class="form-check-input" type="radio" name="inlineRadioOptions" id="middel" value="option2">
                <label class="form-check-label" for="middel">middel</label>
            </div>
            <div class="form-check form-check-inline">
                <input class="form-check-input" type="radio" name="inlineRadioOptions" id="groot" value="option3">
                <label class="form-check-label" for="groot">groot</label>
            </div>
        </div>
        <div class="row">
            <div class="col-sm-3"  style="margin-top: 20px">
                <h5>Ingrediënten</h5>
                <h10 style="color: dimgrey">
                    @Model.maaltijd.Ingredienten
                </h10>
            </div>
        </div>
        <div class="row">
            <div class="col" style="margin-top: 20px">
                <button class="rounded aanpasbutton" type="button" onclick=""> Bestel </button>
            </div>
        </div>
    </div>
</body>